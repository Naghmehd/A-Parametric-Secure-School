<div class="container">
  <h1 class="teacher-title">All The Teachers </h1>
  <div class="row">
    <div class="col-md-8">
      <ol class="teachers-box">
      <% @teachers.each do |teacher| %>
        <li>
          <p><%= teacher.name %></p>
          <p>Age: <%= teacher.age %></p>
          <p>With school since: <%= teacher.hiredate %></p>
          <p><%= link_to "Teacher's Students", school_teacher_path(@school, teacher), class: 'btn btn-default' %></p>

        </li>
        <%end%>
      </ol>
    </div>
  </div>
</div>
